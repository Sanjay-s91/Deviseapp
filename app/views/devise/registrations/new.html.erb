
  <div class ="container border w-50 box pl-5">
   <div class="container box pl-5 pb-5"> 
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control w-75"%>
      </div>

      <div class="field form-group ">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "form-control w-75" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control w-75" %>
      </div>

      <div class="field form-group">
        <%= f.label :Profile_Photo  %><br />
        <%= f.file_field :avatar, class: "form-control w-75" %>
      </div>
      
      
      <div class="actions form-group pt-3">
        <%= f.submit "Sign up",class: "form-control w-75  btn btn-info" %>
      </div>
    <% end %>
    </div> 
    <div class ="ml-5">
     <%= render "devise/shared/links" %>
   </div>
  </div>

